# set mod key
set $mod Mod4

# env var
include ~/.config/sway/startup.sway
include ~/.config/sway/env.sway
include ~/.config/sway/windowrule.sway
include ~/.config/sway/keybinds.sway

# INPUTS

# change keyboard language
input "type:keyboard" {
    xkb_layout us,cz(qwerty)
    xkb_options caps:swapescape
    # what the fuck????????????????? xkb_options grp:shift_alt_toggle does not work for some stupid reason, fuck wayland
}
    bindsym $mod+Shift+t input type:keyboard xkb_switch_layout next

# enabling touchpad
input "1739:52619:SYNA8004:00_06CB:CD8B_Touchpad" {
  tap enabled
}

# wallpaper
output eDP-1 bg $HOME/Pictures/Wallpapers/flowies.png fill

## BORDERS

# set borders
for_window [class=".*"] border pixel 2

# font for window titles
font xft:RobotoMono Nerd Font Bold 11

# set gaps
gaps inner 20
gaps outer -2

# smart gaps
smart_gaps off

## COLOURS

# app_id                 border    bg        text      indicator child_border
client.focused          #E06B74   #E06B74   #E06B74   #E06B74   #E06B74 
client.unfocused        #2F333C   #2F333C   #2F333C   #2F333C   #2F333C
client.focused_inactive #2F333C   #2F333C   #2F333C   #2F333C   #2F333C
